<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_maroongradient"
    tools:context=".AppIntroduction">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/background_5_yellow"
                    android:gravity="center_horizontal"
                    android:paddingTop="8dp"
                    android:text="Arogya\n Swachh Bharat: Swasth Bharat"
                    android:textSize="25sp"
                    android:textStyle="bold|italic" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:padding="8dp"
                    android:background="@drawable/background_white"
                    android:text="This Application is developed as a part of Major Project Work during IVth Semester of M.Sc. Computer Science.\nWe sincerely express our gratitude towards our project mentors Mr. P.K. Hazra Sir and Mrs. Sushila Madan Mam, who guided us at every step in the conceptual undertaking and the implementation of the project work. \n\n Submitted By:\n1.Rohit Verma\n2.Sakshi Meena\n3.Tarun Garg"
                    android:textSize="20sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>