<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_3"
    tools:context=".ViewUserProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="10dp">


        <ImageView
            android:id="@+id/ID_VProfile_DP"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/app_icon_new_round"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="ID"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/ID_ViewUserProfile_ID_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="NA"
                android:textSize="18dp"
                android:background="@drawable/bg_text_1"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="NAME"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/ID_ViewUserProfile_Name_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="NA"
                android:textSize="18dp"
                android:background="@drawable/bg_text_1"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="GENDER"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/ID_ViewUserProfile_Gender_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="NA"
                android:textSize="18dp"
                android:background="@drawable/bg_text_1"
                android:textColor="@color/white"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="DOB"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/ID_ViewUserProfile_DOB_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="NA"
                android:textSize="18dp"
                android:background="@drawable/bg_text_1"
                android:textColor="@color/white"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="BLOOD"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/ID_ViewUserProfile_Blood_Group_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="NA"
                android:textSize="18dp"
                android:background="@drawable/bg_text_1"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="STATE"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/ID_ViewUserProfile_State_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="NA"
                android:textSize="18dp"
                android:background="@drawable/bg_text_1"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="CITY"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/ID_ViewUserProfile_City_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="NA"
                android:textSize="18dp"
                android:background="@drawable/bg_text_1"
                android:textColor="@color/white"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>