<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_white"
    tools:context=".OCR_TextSelector">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="String Fetched:"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ID_OCRTextSelector_StringFromOCR_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="STRING FROM OCR" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="String to be Searched:"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ID_OCRTextSelector_StringToBeSearched_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Search String Here" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:onClick="onSearch"
                android:src="@drawable/search_icon" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>